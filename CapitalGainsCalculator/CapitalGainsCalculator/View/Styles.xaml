<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DataFieldEntry" TargetType="{x:Type Control}">
        <Setter Property="Width" Value="160" />
        <Setter Property="Height" Value="24" />
        <Setter Property="Margin" Value="0,5,5,5" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>
    <Style x:Key="DataFieldLabel" TargetType="{x:Type Label}">
        <Setter Property="Margin" Value="5,5,5,5" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
    </Style>
    <Style x:Key="DataFieldReadonly" TargetType="{x:Type Label}">
        <Setter Property="Margin" Value="5,5,5,5" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
    </Style>
    <Style x:Key="SectionHeader" TargetType="{x:Type Label}">
        <Setter Property="Margin" Value="5,5,5,5" />
        <Setter Property="FontSize" Value="16px" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
    </Style>
    <Style TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="0,7,7,7" />
        <Setter Property="Padding" Value="14,2,14,4" />
    </Style>
</ResourceDictionary>